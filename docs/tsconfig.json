{
  "compilerOptions": {
    "strict": true,
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "verbatimModuleSyntax": true,
    "jsx": "react-jsx",
    "jsxImportSource": "remix/component",
    "paths": {
      "*": ["./*"],
      "remix/component/jsx-runtime": ["../packages/remix/src/component/jsx-runtime.ts"],
      "remix/component/jsx-dev-runtime": ["../packages/remix/src/component/jsx-dev-runtime.ts"]
    }
  }
}
